<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="android:itemTextAppearance">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Widget.Theme.UniversalVaccinePassport.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#ff000f</item>
    </style>

    <style name="Widget.Theme.UniversalVaccinePassport.ButtonBar.Fullscreen" parent="">
        <item name="android:itemTextAppearance">@style/TextAppearance</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#ff000f</item>
    </style>

    <style name="PopupWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_in</item>

    </style>

    <style name="TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Widget.UniversalVaccinePassport.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.UniversalVaccinePassport.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>